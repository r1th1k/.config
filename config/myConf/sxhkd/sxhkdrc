# BSPWM HOTKEYS
# (http://la-familia-grande.de/index.php?site=bspwm)

# common keys
super + r
	pkill -USR1 -x sxhkd
super + b
	source /home/rithik/.config/bspwm/bspwmrc
super + m
	bspc node -s biggest
super + q
    bspc node -c
super + c
	subl /home/rithik/.config/bspwm/bspwmrc /home/rithik/.config/sxhkd/sxhkdrc /home/rithik/.config/polybar/config.ini 

# application shortcuts
alt + r
	rofi -show run 2>/dev/null
alt + Return
	gnome-terminal

# FOCUS window or dsktop
# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'
# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}


# MOVE/RESIZE
# expand a window by moving one of its side outward
super + w + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# move a floating window
super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# STATE/FLAGS
# set the window state
super + {t,shift + t,f,z}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,l,s,p}
	bspc node -g {marked,locked,sticky,private}

xdo below -t $(xdo id -n root) $(xdo id -a polybar)
